%h1 Listing articles

%table
  %tr
    %th Name
    %th Image
    %th Content
    %th Category
    %th Summary
    %th Keyword
    %th
    %th
    %th

  - @articles.each do |article|
    %tr
      %td= article.name
      %td= article.image
      %td= article.content
      %td= article.category_id
      %td= article.summary
      %td= article.keyword
      %td= link_to 'Show', article
      %td= link_to 'Edit', edit_article_path(article)
      %td= link_to 'Destroy', article, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Article', new_article_path
