.older-articles
  %h1 <i class="fi-star hero-color"></i> OTHER ARTICLES
  %hr
  .row
    .columns.small-12
      - @older_articles.each_with_index do |article, index|
        %ul.small-block-grid-2
          %li
            = link_to (image_tag article.image_url(:thumb).to_s, width: 150), article_path(article)
          %li
            %p.no-margin= link_to article.name, article_path(article)
            %p.no-margin= strip_tags (truncate_html((markdown article.content), length: 150))

      %p.right= link_to "All Articles", articles_path
